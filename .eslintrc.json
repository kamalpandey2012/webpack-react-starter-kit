{
	"parser":"babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
	    "strict": 0,
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
	"comma-dangle":[
	"warn",
	"never"
	],
	"no-unused-expressions":"warn",
	"no-useless-concat": "warn",
	"block-scoped-var": "error",
	"consistent-return": "error"
    }
}
